<div id="education" class="max-w-5xl mx-auto my-8 px-6 opacity-0 transition-opacity duration-500 ease-in-out">

  <h1 class="text-2xl font-medium text-gray-900 dark:text-white mb-2">Education</h1>
  <p class="text-gray-600 dark:text-gray-400 mb-6">Academic background and learning experiences</p>
  <div class="space-y-4" id="educationList">
    <!-- Education items will be inserted here -->
    <% if (educationData && Array.isArray(educationData)) { %>
      <% educationData.forEach(function(edu) { %>
        <div class="p-5 bg-white dark:bg-gray-800 rounded-lg shadow-sm education-card card">
          <div class="flex flex-col">
            <div class="flex items-center gap-3 mb-3">
              <img src="<%= edu.logo %>" alt="<%= edu.institution %> Logo"
                class="w-12 h-12 object-cover rounded-full flex-shrink-0 border border-gray-200 dark:border-gray-700 p-0.5">
              <div class="flex-grow min-w-0">
                <h3 class="text-lg font-medium text-gray-900 dark:text-white truncate">
                  <%= edu.degree %>
                </h3>
                <div class="flex flex-wrap justify-between items-center">
                  <p class="text-primary dark:text-blue-400 font-medium">
                    <%= edu.institution %>
                  </p>
                  <span class="text-gray-600 dark:text-gray-400 text-sm">
                    <%= edu.period %>
                  </span>
                </div>
              </div>
            </div>
            <p class="text-gray-700 dark:text-gray-300 text-sm leading-relaxed">
              <%= edu.description %>
            </p>
          </div>
        </div>
        <% }); %>
          <% } %>
  </div>
</div>