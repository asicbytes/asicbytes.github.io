<div class="max-w-5xl mx-auto my-8 px-4 opacity-0 transition-opacity duration-500 ease-in-out" id="profile">
    <div class="bg-white dark:bg-gray-800 card elevation-1 p-6 md:p-8 ">
        <div class="flex flex-col md:flex-row items-center md:items-start gap-8">
            <img src=<%=profilePicture %> alt="Profile Picture"
            class="w-32 h-32 md:w-40 md:h-40 object-cover rounded-full border-4 border-white dark:border-gray-700
            shadow-md">
            <div class="flex-1 text-center md:text-left space-y-4">
                <div>
                    <h1 class="text-3xl font-medium mb-1 text-gray-900 dark:text-white">
                        <%= name %>
                    </h1>
                    <p class="text-lg text-gray-600 dark:text-gray-400"><span>
                            <%= title %>
                        </span>, <span>
                            <%= organization %>
                        </span></p>
                </div>
                <div id="interests" class="flex flex-wrap justify-center md:justify-start gap-2">
                    <% interests.forEach(interest=> { %>
                        <span
                            class="bg-blue-50 dark:bg-blue-900 text-blue-700 dark:text-blue-200 px-3 py-1 rounded-full text-sm">
                            <%= interest %>
                        </span>
                        <% }); %>
                </div>
                <div class="flex flex-wrap justify-center md:justify-start gap-3 mt-6">
                    <a href=<%=socialLinks.github %>
                        class="flex items-center gap-2 px-4 py-2 bg-gray-100 dark:bg-gray-700 text-gray-700
                        dark:text-gray-200 rounded-full hover:bg-gray-200 dark:hover:bg-gray-600 transition-colors"
                        data-link="github">
                        <i class="fab fa-github"></i> GitHub
                    </a>
                    <a href=<%=socialLinks.googleScholar %>
                        class="flex items-center gap-2 px-4 py-2 bg-blue-50 dark:bg-blue-900 text-blue-700
                        dark:text-blue-200 rounded-full hover:bg-blue-100 dark:hover:bg-blue-800 transition-colors"
                        data-link="googleScholar">
                        <i class="fas fa-graduation-cap"></i> Scholar
                    </a>
                    <a href=<%=socialLinks.linkedin %>
                        class="flex items-center gap-2 px-4 py-2 bg-primary text-white rounded-full
                        hover:bg-blue-700 transition-colors"
                        data-link="linkedin">
                        <i class="fab fa-linkedin-in"></i> LinkedIn
                    </a>
                    <a href=<%=socialLinks.website %>
                        class="flex items-center gap-2 px-4 py-2 bg-green-50 dark:bg-green-900 text-green-700
                        dark:text-green-200 rounded-full hover:bg-green-100 dark:hover:bg-green-800
                        transition-colors"
                        data-link="website">
                        <i class="fas fa-globe"></i> Website
                    </a>
                    <a href=<%=socialLinks.email %>
                        class="flex items-center gap-2 px-4 py-2 bg-red-50 dark:bg-red-900 text-red-700
                        dark:text-red-200 rounded-full hover:bg-red-100 dark:hover:bg-red-800 transition-colors"
                        data-link="email">
                        <i class="fas fa-envelope"></i> Email
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Projects Section -->
<section class="py-8 opacity-0 transition-opacity duration-500 ease-in-out" id="project">
    <div class="max-w-5xl mx-auto px-4">
        <div class="mb-6">
            <h2 class="text-2xl font-medium text-gray-900 dark:text-white mb-2">My Projects</h2>
            <p class="text-gray-600 dark:text-gray-400">Recent work I've completed or am currently working on</p>
        </div>

        <!-- Category Pills -->
        <div class="flex overflow-x-auto pb-2 mb-4 hide-scrollbar">
            <button
                class="category-btn active whitespace-nowrap mr-2 px-4 py-1 rounded-full bg-primary text-white text-sm"
                data-filter="all">All</button>
            <% projectData.forEach(data=> { %>
                <button
                    class="category-btn whitespace-nowrap mr-2 px-4 py-1 rounded-full bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 text-sm"
                    data-filter="<%= data.category %>">
                    <%= data.category.charAt(0).toUpperCase() + data.category.slice(1) %>
                </button>
                <% }); %>

        </div>

        <!-- Project List -->
        <div class="space-y-3" id="project-list">
            <% projectData.forEach(data=> {
                data.projects.forEach(project => { %>
                <div class="project-item bg-white dark:bg-gray-800 rounded-lg elevation-1 p-3 transition-all duration-200"
                    data-category="<%= data.category %>">
                    <div class="flex items-center">
                        <div
                            class="w-12 h-12 rounded-full <%= data.iconBg %> flex items-center justify-center mr-4 flex-shrink-0">
                            <span class="material-icons <%= data.iconColor %>">
                                <%= data.icon %>
                            </span>
                        </div>
                        <div class="flex-grow min-w-0">
                            <div class="flex items-center justify-between">
                                <h3 class="text-base font-medium text-gray-900 dark:text-white truncate">
                                    <%= project.title %>
                                </h3>
                                <span
                                    class="<%= project.statusBg %> text-white text-xs px-2 py-0.5 rounded-full ml-2 flex-shrink-0">
                                    <%= project.status %>
                                </span>
                            </div>
                            <p class="text-sm text-gray-600 dark:text-gray-400 line-clamp-1">
                                <%= project.description %>
                            </p>
                        </div>
                        <button
                            class="ml-4 text-primary hover:bg-gray-100 dark:hover:bg-gray-700 p-1 rounded-full flex-shrink-0">
                            <span class="material-icons">arrow_forward</span>
                        </button>
                    </div>
                </div>
                <% }); }); %>


                    <div class="mt-4 text-right">
                        <a href="projects.html"
                            class="inline-flex items-center text-primary hover:text-blue-700 font-medium">
                            View all projects
                            <span class="material-icons ml-1 text-sm">arrow_forward</span>
                        </a>
                    </div>
        </div>

</section>